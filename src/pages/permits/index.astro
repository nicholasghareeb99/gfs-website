      return `<button class="municipality-btn" data-city="${name}" data-county="${c.county}" onclick="selectCity('${name}')"><span class="permit-dot ${dotClass}"></span>${name}<span class="st">${c.county}, ${c.state}</span></button>`;
    }).join('');
  }

  function filterByCounty(county) {
    document.querySelectorAll('.county-tab').forEach(t => t.classList.remove('active'));
    event.target.classList.add('active');
    document.querySelectorAll('.municipality-btn').forEach(btn => {
      btn.style.display = (county === 'all' || btn.dataset.county === county) ? 'block' : 'none';
    });
  }

  function filterCities(query) {
    const q = query.toLowerCase();
    document.querySelectorAll('.municipality-btn').forEach(btn => {
      btn.style.display = btn.dataset.city.toLowerCase().includes(q) ? 'block' : 'none';
    });
  }

  function selectCity(name) {
    const city = cities[name];
    if (!city) return;
    
    document.querySelectorAll('.municipality-btn').forEach(b => b.classList.remove('active'));
    document.querySelector(`.municipality-btn[data-city="${name}"]`)?.classList.add('active');
    
    document.getElementById('cityName').innerHTML = 'üè† ' + name;
    document.getElementById('citySubtitle').textContent = `${city.county} County, ${city.state === 'OH' ? 'Ohio' : 'Michigan'}`;
    
    // Permit type badges
    const badges = document.getElementById('permitBadges');
    if (city.permitType === 'none') {
      badges.innerHTML = '<div class="permit-badge none">‚úÖ NO PERMIT REQUIRED</div>';
    } else if (city.permitType === 'zoning') {
      badges.innerHTML = `<div class="permit-badge zoning">üìã ZONING PERMIT: ${city.permitText}</div>`;
    } else if (city.permitType === 'building') {
      badges.innerHTML = `<div class="permit-badge building">üî® BUILDING PERMIT: ${city.permitText}</div>`;
    } else {
      badges.innerHTML = `<div class="permit-badge zoning">üìã ${city.permitText}</div>`;
    }
    
    document.getElementById('frontH').innerHTML = city.front + '<small> ft</small>';
    document.getElementById('sideH').innerHTML = city.side + '<small> ft</small>';
    document.getElementById('backH').innerHTML = city.back + '<small> ft</small>';
    document.getElementById('frontNote').textContent = city.frontNote || 'Open style preferred';
    document.getElementById('sideNote').textContent = city.sideNote || 'Privacy OK';
    document.getElementById('backNote').textContent = city.backNote || 'Privacy OK';
    
    document.getElementById('quickFacts').innerHTML = `
      <div class="quick-fact"><div class="quick-fact-value">${city.permitFee}</div><div class="quick-fact-label">Permit Fee</div></div>
      <div class="quick-fact"><div class="quick-fact-value">${city.setback}</div><div class="quick-fact-label">Min Setback</div></div>
      <div class="quick-fact"><div class="quick-fact-value">${city.processing}</div><div class="quick-fact-label">Processing</div></div>
      <div class="quick-fact"><div class="quick-fact-value">${city.state === 'OH' ? 'OUPS' : 'MISS DIG'}</div><div class="quick-fact-label">Call 811</div></div>
    `;
    
    if (city.setbacks) document.getElementById('setbackList').innerHTML = city.setbacks.map(s => `<li>${s}</li>`).join('');
    if (city.sight) document.getElementById('sightList').innerHTML = city.sight.map(s => `<li>${s}</li>`).join('');
    if (city.pool) document.getElementById('poolList').innerHTML = city.pool.map(s => `<li>${s}</li>`).join('');
    if (city.hoa) document.getElementById('hoaList').innerHTML = city.hoa.map(s => `<li>${s}</li>`).join('');
    
    // Full rules section
    const fullRulesEl = document.getElementById('fullRules');
    const fullRulesContent = document.getElementById('fullRulesContent');
    if (city.fullRules) {
      fullRulesContent.innerHTML = city.fullRules;
      fullRulesEl.style.display = 'block';
    } else {
      fullRulesEl.style.display = 'none';
    }
    
    document.getElementById('rulesCity').textContent = name;
    document.getElementById('rulesGrid').innerHTML = (city.rules || []).map(rule => {
      const icons = { good: '‚úÖ', warn: '‚ö†Ô∏è', info: '‚ÑπÔ∏è' };
      return `<div class="rule-card ${rule.type}"><span class="rule-icon">${icons[rule.type]||'‚ÑπÔ∏è'}</span><span class="rule-text">${rule.text}</span></div>`;
    }).join('');
    
    const contactHtml = city.address 
      ? `<strong>${city.contact}:</strong> <a href="tel:${city.phone.replace(/[^0-9]/g,'')}" style="color:#fff;text-decoration:underline">${city.phone}</a><br><span style="font-size:0.85rem;opacity:0.9;">${city.address}</span>`
      : `<strong>${city.contact}:</strong> <a href="tel:${city.phone.replace(/[^0-9]/g,'')}" style="color:#fff;text-decoration:underline">${city.phone}</a>`;
    document.getElementById('deptContact').innerHTML = contactHtml;
    
    const linksEl = document.getElementById('linksContent');
    if (city.links && city.links.length) {
      linksEl.innerHTML = city.links.map(l => `<a href="${l.url}" target="_blank" rel="noopener"><span class="link-type">${l.type || 'LINK'}</span> ${l.text}</a>`).join('');
      document.getElementById('officialLinks').style.display = 'block';
    } else {
      document.getElementById('officialLinks').style.display = 'none';
    }
    
    document.getElementById('cityInfoCard').scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  buildCityGrid();
  selectCity('Toledo');
  </script>
</BaseLayout>
