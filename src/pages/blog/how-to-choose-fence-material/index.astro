        text-transform: uppercase;
        margin-bottom: 16px;
    }

    .post-header h1 {
        font-size: 2.5rem;
        max-width: 800px;
        line-height: 1.3;
        margin-bottom: 16px;
    }

    .post-meta {
        display: flex;
        gap: 12px;
        opacity: 0.9;
        font-size: 0.95rem;
    }

    .post-image {
        margin: -40px auto 40px;
        max-width: 1000px;
        padding: 0 20px;
    }

    .post-image img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: grid;
        grid-template-columns: 1fr 300px;
        gap: 40px;
    }

    .post-content {
        padding-bottom: 60px;
    }

    .lead {
        font-size: 1.2rem;
        color: #475569;
        line-height: 1.7;
        margin-bottom: 32px;
    }

    .post-content h2 {
