        background: #f8fafc;
        padding: 24px;
        border-radius: 12px;
        margin-bottom: 24px;
    }

    .sidebar-box h4 {
        margin: 0 0 16px;
        color: var(--primary);
    }

    .sidebar-box ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-box li {
        margin-bottom: 8px;
    }

