---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteSettings } from '../lib/firestore.js';
const site = await getSiteSettings();
---

<BaseLayout canonical="/quote/" title="Get a Free Fence Quote | Ghareeb Fencing Solutions Toledo OH" description="Get an instant fence quote in 60 seconds. Cedar, vinyl, aluminum, chain link fencing in Toledo OH. No pressure, no obligation.">
  <form name="quote-leads" netlify netlify-honeypot="bot-field" hidden>
    <input type="text" name="bot-field" />
    <input type="text" name="name" />
    <input type="tel" name="phone" />
    <input type="email" name="email" />
    <input type="text" name="address" />
    <input type="text" name="fenceType" />
    <input type="text" name="footage" />
    <input type="text" name="timeline" />
    <textarea name="details"></textarea>
  </form>

  <section class="quote-hero">
    <div class="container">
      <div class="hero-badge">üèÜ Toledo's #1 Rated Fence Contractor</div>
      <h1 class="section-title" style="color: white;">Get Your <span class="gold">Free Quote</span></h1>
      <p class="hero-sub">Choose the option that works best for you</p>
    </div>
  </section>

  <div class="quote-cards">
    <a href="/quote/book/" class="quote-card">
      <div class="quote-card-icon"><span>üìÖ</span></div>
      <h2>Book Free Consultation</h2>
      <p>Schedule a free on-site visit. We'll measure your property and provide a detailed written quote.</p>
      <div class="quote-card-meta">üïê Pick a time that works for you</div>
      <div class="quote-card-btn">Book Appointment ‚Üí</div>
    </a>
    <a href="/quote/ballpark/" class="quote-card featured">
      <div class="quote-card-icon"><span>‚ö°</span></div>
      <h2>Instant Ballpark Quote</h2>
      <p>Get a price estimate in 60 seconds. Draw your fence on a map or enter measurements.</p>
      <div class="quote-card-meta">‚è±Ô∏è Results in 60 seconds</div>
      <div class="quote-card-btn">Get Instant Quote ‚Üí</div>
    </a>
    <a href="/quote/form/" class="quote-card">
      <div class="quote-card-icon"><span>üìã</span></div>
      <h2>Request Detailed Quote</h2>
      <p>Fill out a detailed form and we'll respond with a comprehensive written estimate within 24 hours.</p>
      <div class="quote-card-meta">‚úâÔ∏è Response in 24 hours</div>
      <div class="quote-card-btn">Fill Out Form ‚Üí</div>
    </a>
  </div>

  <div class="quote-call-box">
    <span>Prefer to talk? Call us directly:</span>
    <a href={`tel:${site.company.phoneRaw}`} class="call-number">{site.company.phone}</a>
    <span class="call-hours">Mon-Fri 8AM-6PM ¬∑ Sat 9AM-4PM</span>
  </div>

  <section class="section section-light">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Why Get a Quote <span class="gold">From Us?</span></h2>
      </div>
      <div class="why-grid">
        <div class="why-card"><div class="why-icon">ü§ù</div><h3>No Pressure</h3><p>We provide information, not high-pressure sales tactics.</p></div>
        <div class="why-card"><div class="why-icon">üí∞</div><h3>Transparent Pricing</h3><p>Our prices are competitive and clearly explained.</p></div>
        <div class="why-card"><div class="why-icon">‚úÖ</div><h3>Quality Guaranteed</h3><p>3-year warranty on all workmanship.</p></div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .quote-hero { background: linear-gradient(135deg, #1e3a5f 0%, #0f2744 100%); padding: 140px 0 80px; text-align: center; color: white; }
  .hero-badge { display: inline-flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); padding: 10px 24px; border-radius: 9999px; font-size: 0.9rem; margin-bottom: 24px; color: white; }
  .quote-hero .section-title { font-size: clamp(2rem, 5vw, 3rem); margin-bottom: 10px; }
  .hero-sub { color: rgba(255,255,255,0.8); font-size: 1.1rem; }
  .quote-cards { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; max-width: 1200px; margin: -60px auto 60px; padding: 0 20px; position: relative; z-index: 10; }
  .quote-card { background: #1e293b; border: 2px solid #334155; border-radius: 16px; padding: 40px 30px; text-align: center; text-decoration: none; color: white; transition: all 0.3s; display: flex; flex-direction: column; align-items: center; position: relative; cursor: pointer; }
  .quote-card:hover { transform: translateY(-8px); border-color: #d4af37; box-shadow: 0 20px 40px rgba(0,0,0,0.3); color: white; }
  .quote-card.featured { border-color: #d4af37; }
  .quote-card.featured::before { content: "MOST POPULAR"; position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: #059669; color: white; padding: 5px 20px; border-radius: 20px; font-size: 0.75rem; font-weight: 700; letter-spacing: 1px; }
  .quote-card-icon { width: 80px; height: 80px; background: linear-gradient(135deg, #d4af37, #e8c64a); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2rem; margin-bottom: 20px; }
  .quote-card h2 { font-family: var(--font-heading); font-size: 1.3rem; margin-bottom: 12px; color: white; }
  .quote-card p { color: rgba(255,255,255,0.7); font-size: 0.95rem; line-height: 1.6; margin-bottom: 20px; flex: 1; }
  .quote-card-meta { color: rgba(255,255,255,0.5); font-size: 0.85rem; margin-bottom: 20px; }
  .quote-card-btn { background: #d4af37; color: #0f2744; font-weight: 700; padding: 14px 28px; border-radius: 9999px; width: 100%; text-align: center; font-size: 0.95rem; }
  .quote-card:hover .quote-card-btn { background: #e8c64a; }
  .quote-call-box { text-align: center; padding: 0 20px 60px; }
  .call-number { display: block; font-size: 1.5rem; font-weight: 700; color: #d4af37; margin: 8px 0; }
  .call-hours { font-size: 0.85rem; color: #64748b; }
  .why-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 32px; max-width: 900px; margin: 0 auto; }
  .why-card { text-align: center; padding: 24px; }
  .why-icon { font-size: 2rem; margin-bottom: 12px; }
  .why-card h3 { font-family: var(--font-heading); font-size: 1.1rem; margin-bottom: 8px; color: #1e3a5f; }
  .why-card p { color: #64748b; font-size: 0.9rem; }
  @media (max-width: 768px) { .quote-cards { grid-template-columns: 1fr; max-width: 400px; } .why-grid { grid-template-columns: 1fr; } }
</style>
<!-- form detection enabled -->
