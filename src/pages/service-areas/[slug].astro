---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteSettings } from '../../lib/firestore.js';
const site = await getSiteSettings();

const { slug } = Astro.params;

// Service area data
const areas = {
  'toledo': { name: 'Toledo', state: 'OH', county: 'Lucas County', pop: '270,000+', desc: 'As Toledo\'s top-rated fence contractor, we\'ve installed hundreds of fences across all neighborhoods ‚Äî from Old Orchard to Ottawa Hills, West Toledo to Point Place. We know the local permit requirements, HOA guidelines, and soil conditions throughout the Toledo area.' },
  'perrysburg': { name: 'Perrysburg', state: 'OH', county: 'Wood County', pop: '22,000+', desc: 'Perrysburg\'s beautiful neighborhoods deserve beautiful fences. From the historic downtown to newer developments like Riverbend and Woodlands of Perrysburg, we\'ve installed cedar, vinyl, and aluminum fences across town.' },
  'sylvania': { name: 'Sylvania', state: 'OH', county: 'Lucas County', pop: '19,000+', desc: 'Sylvania residents love their backyards, and we love making them better. Our premium cedar and vinyl fences are popular throughout Sylvania Township and the city\'s tree-lined neighborhoods.' },
  'maumee': { name: 'Maumee', state: 'OH', county: 'Lucas County', pop: '14,000+', desc: 'From the Maumee River corridor to the newer subdivisions, we\'ve built fences across Maumee. Aluminum pool fences and cedar privacy fences are our most popular installs here.' },
  'bowling-green': { name: 'Bowling Green', state: 'OH', county: 'Wood County', pop: '32,000+', desc: 'We proudly serve Bowling Green and the surrounding Wood County area. Whether you\'re near the university or out in the rural areas, we deliver the same quality craftsmanship and honest pricing.' },
  'monroe': { name: 'Monroe', state: 'MI', county: 'Monroe County', pop: '20,000+', desc: 'Just across the Michigan border, Monroe is a key part of our service area. We\'re licensed and insured for both Ohio and Michigan, making us the easy choice for Monroe County homeowners.' },
  'oregon': { name: 'Oregon', state: 'OH', county: 'Lucas County', pop: '20,000+', desc: 'Oregon\'s growing neighborhoods need quality fencing. We\'ve installed everything from chain link dog runs to premium cedar privacy fences throughout the Oregon area.' },
  'waterville': { name: 'Waterville', state: 'OH', county: 'Lucas County', pop: '5,500+', desc: 'Waterville\'s charming community and larger lots are perfect for split rail, cedar, and vinyl fencing. We love working in this area.' },
  'whitehouse': { name: 'Whitehouse', state: 'OH', county: 'Lucas County', pop: '4,500+', desc: 'Whitehouse properties often feature larger yards, making fencing a significant investment. We help you choose the right material and style for your specific needs and budget.' },
  'holland': { name: 'Holland', state: 'OH', county: 'Lucas County', pop: '1,800+', desc: 'The Holland and Springfield Township area is one of our most active service zones. We\'ve built many fences here and know the area well.' },
  'lambertville': { name: 'Lambertville', state: 'MI', county: 'Monroe County', pop: '10,000+', desc: 'Lambertville and Bedford Township residents enjoy easy access to our services. Being right on the state line, we\'re perfectly positioned to serve this growing community.' },
  'temperance': { name: 'Temperance', state: 'MI', county: 'Monroe County', pop: '8,000+', desc: 'Temperance is another key Michigan community we serve. Many of our Toledo-area customers have recommended us to friends and family across the border.' },
};

const area = areas[slug];
if (!area) return Astro.redirect('/');

const stateLabel = area.state === 'MI' ? 'Michigan' : 'Ohio';
const title = `Fence Installation ${area.name}, ${area.state} | Ghareeb Fencing Solutions`;
const desc = `Professional fence installation in ${area.name}, ${area.state}. Cedar, vinyl, aluminum, chain link fencing. 5-star rated, licensed & insured. Free quotes.`;

const fenceTypes = [
  { name: 'Cedar Privacy', href: '/fences/cedar/', icon: 'üå≤' },
  { name: 'Vinyl Privacy', href: '/fences/vinyl/', icon: 'üè†' },
  { name: 'Ornamental Aluminum', href: '/fences/aluminum/', icon: '‚ú®' },
  { name: 'Chain Link', href: '/fences/chainlink/', icon: 'üîó' },
  { name: 'Split Rail', href: '/fences/split-rail/', icon: 'ü™µ' },
  { name: 'Wood Privacy', href: '/fences/wood/', icon: 'ü™ö' },
];
---

<BaseLayout title={title} description={desc} keywords={[`fence installation ${area.name.toLowerCase()}`, `fence company ${area.name.toLowerCase()} ${area.state.toLowerCase()}`, `fence contractor ${area.county.toLowerCase()}`]}>
  <section class="section" style="padding-top: 60px;">
    <div class="container">
      <div class="sa-header">
        <a href="/about/#service-areas" class="fence-breadcrumb" style="display: inline-flex; align-items: center; gap: 4px; color: var(--text-muted); font-size: 0.85rem; margin-bottom: 12px;">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16"><polyline points="15 18 9 12 15 6"/></svg>
          All Service Areas
        </a>
        <h1 style="font-family: var(--font-display); font-size: 2.5rem;">Fence Installation in <span class="gold">{area.name}, {area.state}</span></h1>
        <p style="color: var(--text-muted); font-size: 1.1rem; max-width: 700px; margin: 16px auto 0; line-height: 1.7;">{area.desc}</p>
      </div>

      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px; margin: 40px 0; max-width: 800px; margin-left: auto; margin-right: auto;">
        <div style="background: var(--bg-white); border-radius: var(--radius); padding: 20px; border: 1px solid var(--border); text-align: center;">
          <div style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; color: var(--text-muted);">Location</div>
          <div style="font-family: var(--font-display); font-size: 1.1rem; font-weight: 700; color: var(--primary);">{area.county}</div>
        </div>
        <div style="background: var(--bg-white); border-radius: var(--radius); padding: 20px; border: 1px solid var(--border); text-align: center;">
          <div style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; color: var(--text-muted);">Population</div>
          <div style="font-family: var(--font-display); font-size: 1.1rem; font-weight: 700; color: var(--primary);">{area.pop}</div>
        </div>
        <div style="background: var(--bg-white); border-radius: var(--radius); padding: 20px; border: 1px solid var(--border); text-align: center;">
          <div style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 1px; color: var(--text-muted);">Our Rating</div>
          <div style="font-family: var(--font-display); font-size: 1.1rem; font-weight: 700; color: var(--primary);">{site.stats.googleRating} ‚òÖ</div>
        </div>
      </div>
    </div>
  </section>

  <section class="section section-light">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Our Services</div>
        <h2 class="section-title">Fence Styles Available in <span class="gold">{area.name}</span></h2>
      </div>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 16px; max-width: 900px; margin: 0 auto;">
        {fenceTypes.map((ft) => (
          <a href={ft.href} style="display: flex; align-items: center; gap: 14px; padding: 20px; background: var(--bg-white); border-radius: var(--radius); border: 1px solid var(--border); text-decoration: none; color: inherit; transition: box-shadow 0.2s;">
            <span style="font-size: 1.5rem;">{ft.icon}</span>
            <div>
              <div style="font-weight: 600;">{ft.name}</div>
              <span style="color: var(--accent); font-size: 0.85rem;">Learn More ‚Üí</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready for Your {area.name} Fence Project?</h2>
        <p>Get a free quote in 60 seconds or call us today.</p>
        <div class="cta-buttons">
          <a href="/quote/" class="btn btn-primary btn-lg">Get Free Quote</a>
          <a href={`tel:${site.company.phoneRaw}`} class="btn btn-secondary btn-lg">{site.company.phone}</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .sa-header { text-align: center; }
  .fence-breadcrumb:hover { color: var(--accent); }
</style>
