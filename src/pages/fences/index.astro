---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getSiteSettings } from '../../lib/firestore.js';
const site = await getSiteSettings();

const fenceTypes = [
  { name: 'Cedar Privacy', slug: 'cedar', image: '/images/gallery/cedar-shadowbox.jpg', desc: 'Natural beauty with premium Michigan-sourced cedar. The gold standard for privacy fencing.' },
  { name: 'Wood Privacy', slug: 'wood', image: '/images/gallery/pt-privacy.jpg', desc: 'Affordable pressure-treated wood fencing. Solid privacy at an unbeatable value.' },
  { name: 'Vinyl Privacy', slug: 'vinyl', image: '/images/gallery/vinyl-white.jpg', desc: 'Zero maintenance, lifetime warranty. Premium Homeland vinyl made in Michigan.' },
  { name: 'Ornamental Aluminum', slug: 'aluminum', image: '/images/gallery/aluminum-black.jpg', desc: 'Elegant pool-code-compliant fencing. Rust-free, maintenance-free, timeless style.' },
  { name: 'Chain Link', slug: 'chainlink', image: '/images/gallery/chainlink-1.jpg', desc: 'Practical, versatile, and budget-friendly. Galvanized or vinyl-coated options.' },
  { name: 'Split Rail', slug: 'split-rail', image: '/images/gallery/split-rail-1.jpg', desc: 'Rustic charm for large properties. Perfect for boundaries and keeping pets in.' },
];
---

<BaseLayout title="Fence Styles | Professional Fence Installation" description="Explore our fence styles: cedar, vinyl, aluminum, chain link, split rail, and wood privacy fencing. Quality materials, expert installation in Toledo OH.">
  <section class="section" style="padding-top: 60px;">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Our Services</div>
        <h1 style="font-family: var(--font-display); font-size: 2.5rem;">Professional Fence <span class="gold">Installation</span></h1>
        <p style="color: var(--text-muted); font-size: 1.1rem; max-width: 650px; margin: 12px auto 0;">Quality materials, expert craftsmanship, and lasting results for every fencing need in Northwest Ohio and Southeast Michigan.</p>
      </div>
      <div class="fence-types-grid">
        {fenceTypes.map((ft) => (
          <a href={`/fences/${ft.slug}/`} class="fence-type-card">
            <div class="fence-type-img"><img src={ft.image} alt={ft.name} loading="lazy" /></div>
            <div class="fence-type-info">
              <h3>{ft.name}</h3>
              <p>{ft.desc}</p>
              <span class="fence-type-link">Learn More →</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Not Sure Which Fence Is Right?</h2>
        <p>Call us for a free consultation — we'll help you pick the perfect fence for your property and budget.</p>
        <div class="cta-buttons">
          <a href="/quote/" class="btn btn-primary btn-lg">Get Free Quote</a>
          <a href={`tel:${site.company.phoneRaw}`} class="btn btn-secondary btn-lg">{site.company.phone}</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .fence-types-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 24px; }
  .fence-type-card {
    display: flex; flex-direction: column; border-radius: var(--radius-lg); overflow: hidden;
    background: var(--bg-white); border: 1px solid var(--border); transition: transform 0.3s, box-shadow 0.3s;
    text-decoration: none; color: inherit;
  }
  .fence-type-card:hover { transform: translateY(-6px); box-shadow: var(--shadow-lg); }
  .fence-type-img { aspect-ratio: 16/10; overflow: hidden; }
  .fence-type-img img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s; }
  .fence-type-card:hover .fence-type-img img { transform: scale(1.05); }
  .fence-type-info { padding: 24px; }
  .fence-type-info h3 { font-size: 1.25rem; margin-bottom: 8px; }
  .fence-type-info p { color: var(--text-muted); font-size: 0.9rem; line-height: 1.6; margin-bottom: 12px; }
  .fence-type-link { color: var(--accent); font-weight: 600; font-size: 0.9rem; }
  @media (max-width: 768px) { .fence-types-grid { grid-template-columns: 1fr; } }
</style>
