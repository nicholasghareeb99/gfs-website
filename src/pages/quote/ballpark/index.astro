    <div class="container">
      <h1>‚ö° Instant Fence Quote</h1>
      <p>Get a ballpark estimate in seconds. No obligation, no pressure. Just honest pricing.</p>
    </div>
  </section>

  <div class="calculator-container">
    <div class="calc-card">
      <!-- Address Section -->
      <div class="calc-section">
        <h3>üìç Your Location (Optional)</h3>
        <div class="input-group">
          <label for="address">Address - helps us check permit requirements</label>
          <div class="address-input-wrapper">
            <input type="text" id="address" placeholder="Enter your address..." autocomplete="off">
            <div class="address-suggestions" id="addressSuggestions"></div>
          </div>
        </div>
        <div class="permit-info" id="permitInfo">
          <h4>üìã Permit Info for Your Area</h4>
          <p id="permitText">We'll look up permit requirements based on your address.</p>
        </div>
      </div>

      <!-- Fence Length -->
      <div class="calc-section">
        <h3>üìè Fence Length</h3>
        <div class="input-group">
          <label for="fenceLength">Total linear feet of fencing</label>
          <input type="number" id="fenceLength" placeholder="e.g., 150" min="10" max="2000" value="">
        </div>
      </div>

      <!-- Fence Style -->
      <div class="calc-section">
        <h3>üè† Fence Style</h3>
        <div class="style-grid" id="styleGrid">
          <div class="style-option" data-style="wood" data-price="25">
            <div class="style-name">Wood Privacy</div>
            <div class="style-price">From $25/ft</div>
          </div>
          <div class="style-option selected" data-style="cedar" data-price="45">
            <div class="style-name">Cedar Privacy</div>
            <div class="style-price">From $45/ft</div>
          </div>
          <div class="style-option" data-style="vinyl" data-price="50">
            <div class="style-name">Vinyl Privacy</div>
            <div class="style-price">From $50/ft</div>
          </div>
          <div class="style-option" data-style="aluminum" data-price="40">
            <div class="style-name">Aluminum</div>
            <div class="style-price">From $40/ft</div>
          </div>
          <div class="style-option" data-style="chainlink" data-price="18">
            <div class="style-name">Chain Link</div>
            <div class="style-price">From $18/ft</div>
          </div>
          <div class="style-option" data-style="splitrail" data-price="15">
            <div class="style-name">Split Rail</div>
            <div class="style-price">From $15/ft</div>
          </div>
        </div>
      </div>

      <!-- Fence Height -->
      <div class="calc-section">
        <h3>üìê Fence Height</h3>
        <div class="height-options" id="heightOptions">
          <button class="height-btn" data-height="4" data-mult="0.7">4 ft</button>
          <button class="height-btn" data-height="5" data-mult="0.85">5 ft</button>
          <button class="height-btn selected" data-height="6" data-mult="1.0">6 ft</button>
          <button class="height-btn" data-height="8" data-mult="1.35">8 ft</button>
        </div>
      </div>

      <!-- Gates -->
      <div class="calc-section">
        <h3>üö™ Gates</h3>
        <div class="input-row">
          <div class="input-group">
            <label>Walk Gates (3-4ft wide)</label>
            <div class="gate-counter">
              <button class="gate-btn" onclick="adjustGate('walk', -1)">‚àí</button>
              <span class="gate-count" id="walkGateCount">1</span>
              <button class="gate-btn" onclick="adjustGate('walk', 1)">+</button>
            </div>
          </div>
          <div class="input-group">
            <label>Double/Drive Gates (8-12ft wide)</label>
            <div class="gate-counter">
              <button class="gate-btn" onclick="adjustGate('drive', -1)">‚àí</button>
              <span class="gate-count" id="driveGateCount">0</span>
              <button class="gate-btn" onclick="adjustGate('drive', 1)">+</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Old Fence Removal -->
