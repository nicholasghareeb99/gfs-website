              <label for="removalFeet">Linear feet to remove</label>
              <input type="number" id="removalFeet" placeholder="e.g., 150" min="0" value="0">
            </div>
            <div class="input-group">
              <label for="removalType">Type of fence</label>
              <select id="removalType">
                <option value="3">Wood or Chain Link ($3/ft)</option>
