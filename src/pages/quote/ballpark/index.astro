---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const pageTitle = "Instant Fence Quote Calculator | Ghareeb Fencing Solutions";
const pageDescription = "Get an instant ballpark estimate for your fence project. Enter your fence length, style, and gates to see pricing. Toledo, NW Ohio & SE Michigan.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <style>
    .quote-hero{background:linear-gradient(135deg,var(--primary-dark),var(--primary));color:#fff;padding:140px 0 60px;text-align:center}
    .quote-hero h1{color:#fff;font-size:clamp(2rem,5vw,2.8rem);margin-bottom:12px}
    .quote-hero p{color:#94a3b8;font-size:1.1rem;max-width:600px;margin:0 auto}
    .calculator-container{max-width:900px;margin:-40px auto 60px;padding:0 20px;position:relative;z-index:10}
    .calc-card{background:var(--bg-card);border:1px solid var(--border);border-radius:var(--radius-lg);padding:32px;box-shadow:var(--shadow-lg)}
    .calc-section{margin-bottom:32px}
    .calc-section h3{font-size:1.1rem;margin-bottom:16px;display:flex;align-items:center;gap:8px;color:var(--primary)}
    .input-group{margin-bottom:20px}
    .input-group label{display:block;font-weight:600;margin-bottom:8px;color:var(--text-dark)}
    .input-group input,.input-group select{width:100%;padding:14px 16px;border:2px solid var(--border);border-radius:var(--radius);font-size:1rem;background:var(--bg-light);color:var(--text-dark);box-sizing:border-box}
    .input-group input:focus,.input-group select:focus{border-color:var(--accent);outline:none}
    .input-row{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:16px}
    .style-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(140px,1fr));gap:12px}
    .style-option{padding:16px;border:2px solid var(--border);border-radius:var(--radius);text-align:center;cursor:pointer;transition:all .2s;background:var(--bg-light)}
    .style-option:hover{border-color:var(--accent)}
    .style-option.selected{border-color:var(--accent);background:linear-gradient(135deg,rgba(212,175,55,0.1),rgba(212,175,55,0.2))}
    .style-option .style-name{font-weight:700;margin-bottom:4px;color:var(--text-dark)}
    .style-option .style-price{font-size:0.85rem;color:var(--text-muted)}
    .gate-counter{display:flex;align-items:center;gap:12px}
    .gate-btn{width:40px;height:40px;border:2px solid var(--border);border-radius:50%;background:var(--bg-light);font-size:1.2rem;cursor:pointer;display:flex;align-items:center;justify-content:center;transition:all .2s}
    .gate-btn:hover{border-color:var(--accent);background:var(--accent);color:var(--primary-dark)}
    .gate-count{font-size:1.5rem;font-weight:700;min-width:40px;text-align:center}
    .height-options{display:flex;gap:12px;flex-wrap:wrap}
    .height-btn{padding:12px 24px;border:2px solid var(--border);border-radius:var(--radius-full);background:var(--bg-light);cursor:pointer;font-weight:600;transition:all .2s}
    .height-btn:hover{border-color:var(--accent)}
    .height-btn.selected{border-color:var(--accent);background:var(--accent);color:var(--primary-dark)}
    .results-card{background:linear-gradient(135deg,var(--primary),var(--primary-dark));border-radius:var(--radius-lg);padding:32px;color:#fff;margin-top:32px}
    .results-card h3{color:#fff;margin-bottom:24px;text-align:center}
    .price-display{text-align:center;margin-bottom:24px}
    .price-range{font-size:2.5rem;font-weight:800;color:var(--accent)}
    .price-note{font-size:0.9rem;opacity:0.8;margin-top:8px}
    .breakdown{display:grid;gap:12px;margin-bottom:24px}
    .breakdown-row{display:flex;justify-content:space-between;padding:12px 16px;background:rgba(255,255,255,0.1);border-radius:8px}
    .breakdown-label{opacity:0.9}
    .breakdown-value{font-weight:700}
    .financing-options{background:rgba(255,255,255,0.1);border-radius:12px;padding:20px;margin-top:24px}
    .financing-options h4{margin-bottom:16px;text-align:center}
    .financing-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:8px;text-align:center}
    @media(max-width:600px){.financing-grid{grid-template-columns:repeat(2,1fr)}}
    .financing-item{padding:12px;background:rgba(255,255,255,0.1);border-radius:8px}
    .financing-term{font-size:0.8rem;opacity:0.8}
    .financing-amount{font-weight:700;font-size:1.1rem}
    .cta-buttons{display:flex;gap:12px;justify-content:center;margin-top:24px;flex-wrap:wrap}
    .cta-buttons .btn{padding:14px 28px;border-radius:var(--radius-full);font-weight:700;text-decoration:none;display:inline-flex;align-items:center;gap:8px}
    .btn-gold{background:var(--accent);color:var(--primary-dark)}
    .btn-white{background:#fff;color:var(--primary)}
    .removal-toggle{display:flex;align-items:center;gap:12px;margin-top:16px}
    .toggle-switch{position:relative;width:50px;height:28px;background:var(--border);border-radius:14px;cursor:pointer;transition:background .2s}
    .toggle-switch.active{background:var(--accent)}
    .toggle-switch::after{content:'';position:absolute;width:22px;height:22px;background:#fff;border-radius:50%;top:3px;left:3px;transition:transform .2s}
    .toggle-switch.active::after{transform:translateX(22px)}
    .removal-options{margin-top:16px;padding:16px;background:var(--bg-light);border-radius:var(--radius);display:none}
    .removal-options.show{display:block}
    .permit-info{margin-top:24px;padding:16px;background:rgba(59,130,246,0.1);border:2px solid rgba(59,130,246,0.3);border-radius:var(--radius);display:none}
    .permit-info.show{display:block}
    .permit-info h4{color:#2563eb;margin-bottom:8px}
    .address-input-wrapper{position:relative}
    .address-suggestions{position:absolute;top:100%;left:0;right:0;background:#fff;border:2px solid var(--accent);border-top:none;border-radius:0 0 12px 12px;max-height:300px;overflow-y:auto;z-index:100;display:none}
    .address-suggestions.show{display:block}
    .address-suggestion{padding:12px 16px;cursor:pointer;border-bottom:1px solid var(--border);display:flex;align-items:center;gap:8px}
    .address-suggestion:hover{background:rgba(212,175,55,0.1)}
    .addr-main{font-weight:600}
    .addr-sub{font-size:0.85rem;color:var(--text-muted)}
    .toast{position:fixed;bottom:20px;left:50%;transform:translateX(-50%);background:var(--primary);color:#fff;padding:12px 24px;border-radius:var(--radius-full);z-index:1000;display:none;align-items:center;gap:8px;box-shadow:var(--shadow-lg)}
    .toast.show{display:flex}
  </style>

