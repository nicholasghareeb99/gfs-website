          </div>
          <div class="input-group">
            <label for="phone">Phone Number *</label>
            <input type="tel" id="phone" name="phone" required placeholder="(419) 555-1234">
          </div>
        </div>
        <div class="input-group">
          <label for="email">Email Address *</label>
          <input type="email" id="email" name="email" required placeholder="john@example.com">
        </div>
        <div class="input-group">
          <label for="projectAddress">Project Address *</label>
          <input type="text" id="projectAddress" name="address" required placeholder="123 Main St, Toledo, OH">
        </div>
        <div class="input-group">
          <label for="notes">Additional Notes (Optional)</label>
          <textarea id="notes" name="notes" rows="3" style="width:100%;padding:14px 16px;border:2px solid var(--border);border-radius:var(--radius);font-size:1rem;background:var(--bg-light);resize:vertical;box-sizing:border-box" placeholder="Any special requirements, questions, or details about your project..."></textarea>
        </div>
        <button type="submit" class="btn btn-gold" style="width:100%;justify-content:center;padding:16px;font-size:1.1rem;border:none;cursor:pointer">
          üì© Request Free Quote
        </button>
        <p style="text-align:center;font-size:0.85rem;color:var(--text-muted);margin-top:16px">No spam. We respect your privacy. Quotes are always free with no obligation.</p>
      </form>
    </div>
  </div>

  <div class="toast" id="toast"></div>

  <script>
  // Pricing data
  const PRICING = {
    wood: { base: 25, range: 8 },
    cedar: { base: 45, range: 15 },
    vinyl: { base: 50, range: 20 },
    aluminum: { base: 40, range: 20 },
    chainlink: { base: 18, range: 7 },
    splitrail: { base: 15, range: 5 }
  };

  const GATE_PRICES = {
    walk: { min: 200, max: 350 },
    drive: { min: 450, max: 750 }
  };

  // State
  let state = {
    length: 0,
    style: 'cedar',
    height: 6,
    heightMult: 1.0,
    walkGates: 1,
    driveGates: 0,
    removal: false,
    removalFeet: 0,
    removalRate: 3
  };

  // Permit info by city
  const PERMIT_INFO = {
    'toledo': { text: 'Toledo requires a FREE Certificate of Zoning Compliance. Max 3.5ft front (open style), 6ft rear. We handle all permits!' },
    'perrysburg': { text: 'Perrysburg requires a free Zoning Compliance Form. Max 4ft front (open style), 6ft rear. Quick approval process.' },
    'sylvania': { text: 'Sylvania requires Zoning Review (free). Many HOAs in area - check your deed restrictions first.' },
    'maumee': { text: 'Maumee requires free Zoning Approval. Historic district has additional design review.' },
    'oregon': { text: 'Oregon requires a $25 Zoning Permit. Standard heights: 4ft front, 6ft rear.' },
    'monroe': { text: 'Monroe MI requires a Building Permit ($50-$100). Standard heights: 4ft front, 6ft rear.' },
    'temperance': { text: 'Great news! Bedford Township (Temperance) does NOT require a fence permit!' },
    'lambertville': { text: 'Great news! Bedford Township (Lambertville) does NOT require a fence permit!' },
    'default': { text: 'Permit requirements vary by municipality. We research and handle all permits for you!' }
  };

  // Initialize
  document.addEventListener('DOMContentLoaded', function() {
    // Style selection
    document.querySelectorAll('.style-option').forEach(opt => {
      opt.addEventListener('click', function() {
        document.querySelectorAll('.style-option').forEach(o => o.classList.remove('selected'));
        this.classList.add('selected');
        state.style = this.dataset.style;
        calculate();
      });
    });

    // Height selection
    document.querySelectorAll('.height-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.height-btn').forEach(b => b.classList.remove('selected'));
        this.classList.add('selected');
        state.height = parseInt(this.dataset.height);
        state.heightMult = parseFloat(this.dataset.mult);
        calculate();
      });
    });

    // Length input
    document.getElementById('fenceLength').addEventListener('input', function() {
      state.length = parseInt(this.value) || 0;
      calculate();
    });

    // Removal inputs
    document.getElementById('removalFeet').addEventListener('input', function() {
      state.removalFeet = parseInt(this.value) || 0;
      calculate();
    });
    document.getElementById('removalType').addEventListener('change', function() {
      state.removalRate = parseInt(this.value);
      calculate();
    });

    // Address autocomplete
    const addressInput = document.getElementById('address');
    const suggestions = document.getElementById('addressSuggestions');
    let debounceTimer;

    addressInput.addEventListener('input', function() {
      clearTimeout(debounceTimer);
      const query = this.value.trim();
      if (query.length < 3) {
        suggestions.classList.remove('show');
        return;
      }
      debounceTimer = setTimeout(() => searchAddress(query), 300);
    });

    addressInput.addEventListener('blur', function() {
      setTimeout(() => suggestions.classList.remove('show'), 200);
    });

    // Initial calculation
    calculate();
  });

  function adjustGate(type, delta) {
    if (type === 'walk') {
      state.walkGates = Math.max(0, Math.min(10, state.walkGates + delta));
      document.getElementById('walkGateCount').textContent = state.walkGates;
    } else {
      state.driveGates = Math.max(0, Math.min(5, state.driveGates + delta));
      document.getElementById('driveGateCount').textContent = state.driveGates;
    }
    calculate();
  }

  function toggleRemoval() {
    state.removal = !state.removal;
    document.getElementById('removalToggle').classList.toggle('active', state.removal);
    document.getElementById('removalOptions').classList.toggle('show', state.removal);
    if (!state.removal) {
      state.removalFeet = 0;
      document.getElementById('removalFeet').value = 0;
    }
    calculate();
  }

  function calculate() {
    if (state.length < 10) {
      document.getElementById('priceRange').textContent = 'Enter fence length above';
      document.getElementById('breakdown').innerHTML = '';
      document.getElementById('financingGrid').innerHTML = '';
      return;
    }

    const pricing = PRICING[state.style];
    const baseLow = pricing.base * state.heightMult;
    const baseHigh = (pricing.base + pricing.range) * state.heightMult;

    // Fence cost
    const fenceLow = Math.round(state.length * baseLow);
    const fenceHigh = Math.round(state.length * baseHigh);

    // Gates cost
    const walkLow = state.walkGates * GATE_PRICES.walk.min;
    const walkHigh = state.walkGates * GATE_PRICES.walk.max;
    const driveLow = state.driveGates * GATE_PRICES.drive.min;
    const driveHigh = state.driveGates * GATE_PRICES.drive.max;
    const gatesLow = walkLow + driveLow;
    const gatesHigh = walkHigh + driveHigh;

    // Removal cost
    const removalCost = state.removal ? state.removalFeet * state.removalRate : 0;

    // Totals
    const totalLow = fenceLow + gatesLow + removalCost;
    const totalHigh = fenceHigh + gatesHigh + removalCost;

    // Display
    document.getElementById('priceRange').textContent = `$${totalLow.toLocaleString()} - $${totalHigh.toLocaleString()}`;

    // Breakdown
    let breakdown = `
      <div class="breakdown-row"><span class="breakdown-label">üìè ${state.length} ft of ${state.style} fence (${state.height}ft tall)</span><span class="breakdown-value">$${fenceLow.toLocaleString()} - $${fenceHigh.toLocaleString()}</span></div>
    `;
    if (state.walkGates > 0) {
      breakdown += `<div class="breakdown-row"><span class="breakdown-label">üö™ ${state.walkGates} walk gate${state.walkGates > 1 ? 's' : ''}</span><span class="breakdown-value">$${walkLow.toLocaleString()} - $${walkHigh.toLocaleString()}</span></div>`;
    }
    if (state.driveGates > 0) {
      breakdown += `<div class="breakdown-row"><span class="breakdown-label">üöó ${state.driveGates} drive gate${state.driveGates > 1 ? 's' : ''}</span><span class="breakdown-value">$${driveLow.toLocaleString()} - $${driveHigh.toLocaleString()}</span></div>`;
    }
    if (removalCost > 0) {
      breakdown += `<div class="breakdown-row"><span class="breakdown-label">üóëÔ∏è Remove ${state.removalFeet} ft old fence</span><span class="breakdown-value">$${removalCost.toLocaleString()}</span></div>`;
    }
    document.getElementById('breakdown').innerHTML = breakdown;

    // Financing options (using midpoint)
    const mid = Math.round((totalLow + totalHigh) / 2);
    const financing = [
      { term: '12 mo', amount: Math.round(mid / 12) },
      { term: '24 mo', amount: Math.round(mid / 24) },
      { term: '36 mo', amount: Math.round(mid / 36) },
      { term: '48 mo', amount: Math.round(mid / 48) }
    ];
    document.getElementById('financingGrid').innerHTML = financing.map(f => `
      <div class="financing-item">
        <div class="financing-term">${f.term}</div>
        <div class="financing-amount">$${f.amount}/mo</div>
      </div>
    `).join('');

    // Update hidden form field
    updateQuoteDetails();
  }

  function updateQuoteDetails() {
    const details = `
Style: ${state.style}
Length: ${state.length} ft
Height: ${state.height} ft
Walk Gates: ${state.walkGates}
Drive Gates: ${state.driveGates}
Removal: ${state.removal ? state.removalFeet + ' ft' : 'No'}
Estimate: ${document.getElementById('priceRange').textContent}
    `.trim();
    document.getElementById('quoteDetails').value = details;
  }

  async function searchAddress(query) {
    const suggestions = document.getElementById('addressSuggestions');
    suggestions.innerHTML = '<div class="address-suggestion">üîç Searching...</div>';
    suggestions.classList.add('show');

    try {
      const url = 'https://geocode.arcgis.com/arcgis/rest/services/World/GeocodeServer/findAddressCandidates?' + new URLSearchParams({
        f: 'json',
        singleLine: query,
        outFields: 'Addr_type,StAddr,City,Region,Postal',
        maxLocations: '5',
        countryCode: 'USA',
        searchExtent: '-84.5,41.2,-83.0,42.1'
      });

      const resp = await fetch(url);
      const data = await resp.json();

      if (data.candidates && data.candidates.length > 0) {
        const filtered = data.candidates.filter(c => {
          const region = (c.attributes?.Region || '').toUpperCase();
          return region === 'OHIO' || region === 'OH' || region === 'MICHIGAN' || region === 'MI';
        }).slice(0, 5);

        if (filtered.length > 0) {
          suggestions.innerHTML = filtered.map(c => {
            const addr = c.attributes || {};
            const main = addr.StAddr || c.address.split(',')[0];
            const sub = [addr.City, addr.Region, addr.Postal].filter(Boolean).join(', ');
            return `<div class="address-suggestion" data-full="${c.address}" data-city="${(addr.City || '').toLowerCase()}">
              <div><div class="addr-main">${main}</div><div class="addr-sub">${sub}</div></div>
            </div>`;
          }).join('');

          suggestions.querySelectorAll('.address-suggestion').forEach(el => {
            el.addEventListener('click', function() {
              document.getElementById('address').value = this.dataset.full;
              document.getElementById('projectAddress').value = this.dataset.full;
              suggestions.classList.remove('show');
              showPermitInfo(this.dataset.city);
            });
          });
        } else {
          suggestions.innerHTML = '<div class="address-suggestion">No addresses found in our service area</div>';
        }
      } else {
        suggestions.innerHTML = '<div class="address-suggestion">No results found</div>';
      }
    } catch (e) {
      suggestions.innerHTML = '<div class="address-suggestion">Search error - please try again</div>';
    }
  }

  function showPermitInfo(city) {
    const info = PERMIT_INFO[city] || PERMIT_INFO.default;
    document.getElementById('permitText').textContent = info.text;
    document.getElementById('permitInfo').classList.add('show');
  }

  function scrollToForm() {
    document.getElementById('lead-form').scrollIntoView({ behavior: 'smooth' });
  }
  </script>
</BaseLayout>
