---
// Admin page - no layout, standalone
import site from '../content/site.json';
import home from '../content/home.json';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - {site.company.name}</title>
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body { 
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0f172a;
            color: #e2e8f0;
            min-height: 100vh;
        }
        .admin-header {
            background: #1e293b;
            padding: 16px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #334155;
        }
        .admin-header h1 { font-size: 1.25rem; color: #d4af37; }
        .admin-nav { display: flex; gap: 16px; }
        .admin-nav a { color: #94a3b8; text-decoration: none; padding: 8px 16px; border-radius: 6px; }
        .admin-nav a:hover, .admin-nav a.active { background: #334155; color: white; }
        
        .admin-container { display: flex; min-height: calc(100vh - 60px); }
        .admin-sidebar {
            width: 240px;
            background: #1e293b;
            padding: 24px 16px;
            border-right: 1px solid #334155;
        }
        .sidebar-section { margin-bottom: 24px; }
        .sidebar-section h3 { font-size: 0.75rem; color: #64748b; text-transform: uppercase; margin-bottom: 8px; }
        .sidebar-link {
            display: block;
            padding: 10px 12px;
            color: #94a3b8;
            text-decoration: none;
            border-radius: 6px;
            margin-bottom: 4px;
            cursor: pointer;
        }
        .sidebar-link:hover, .sidebar-link.active { background: #334155; color: white; }
        
        .admin-main { flex: 1; padding: 32px; overflow-y: auto; }
        .admin-main h2 { margin-bottom: 24px; color: #d4af37; }
        
        .form-group { margin-bottom: 20px; }
        .form-group label { display: block; margin-bottom: 6px; color: #94a3b8; font-size: 0.875rem; }
        .form-group input, .form-group textarea, .form-group select {
            width: 100%;
            padding: 12px;
            background: #1e293b;
            border: 1px solid #334155;
            border-radius: 6px;
            color: white;
            font-size: 1rem;
        }
        .form-group input:focus, .form-group textarea:focus {
            outline: none;
            border-color: #d4af37;
        }
        .form-group textarea { min-height: 100px; resize: vertical; }
        
        .form-row { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 16px; }
        
        .image-field {
            background: #1e293b;
            border: 2px dashed #334155;
            border-radius: 8px;
            padding: 16px;
            text-align: center;
        }
        .image-field img { max-width: 100%; max-height: 150px; border-radius: 4px; margin-bottom: 12px; }
        .image-field input[type="text"] { margin-top: 8px; }
        
        .card {
            background: #1e293b;
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
            border: 1px solid #334155;
        }
        .card h3 { color: #d4af37; margin-bottom: 16px; font-size: 1rem; }
        
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s;
        }
        .btn-primary { background: #d4af37; color: #0f172a; font-weight: 600; }
        .btn-primary:hover { background: #e5c158; }
        .btn-secondary { background: #334155; color: white; }
        .btn-secondary:hover { background: #475569; }
        
        .save-bar {
            position: fixed;
            bottom: 0;
            left: 240px;
            right: 0;
            background: #1e293b;
            padding: 16px 32px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid #334155;
            z-index: 100;
        }
        .save-status { color: #94a3b8; }
        .save-status.unsaved { color: #f59e0b; }
        .save-status.saved { color: #22c55e; }
        
        .list-item {
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 16px;
        }
        .list-item img { width: 80px; height: 60px; object-fit: cover; border-radius: 4px; }
        .list-item-content { flex: 1; }
        .list-item-content h4 { color: white; margin-bottom: 4px; }
        .list-item-content p { color: #64748b; font-size: 0.875rem; }
        
        .tabs { display: flex; gap: 8px; margin-bottom: 24px; }
        .tab {
            padding: 10px 20px;
            background: transparent;
            border: 1px solid #334155;
            border-radius: 6px;
            color: #94a3b8;
            cursor: pointer;
        }
        .tab.active { background: #d4af37; color: #0f172a; border-color: #d4af37; }
        
        .hidden { display: none; }
        
        .toast {
            position: fixed;
            bottom: 100px;
            right: 32px;
            background: #22c55e;
            color: white;
            padding: 16px 24px;
            border-radius: 8px;
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.3s;
        }
        .toast.show { transform: translateY(0); opacity: 1; }
        .toast.error { background: #ef4444; }
        
        /* Login styles */
        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .login-box {
            background: #1e293b;
            padding: 40px;
            border-radius: 12px;
            width: 100%;
            max-width: 400px;
        }
        .login-box h1 { text-align: center; color: #d4af37; margin-bottom: 32px; }
    </style>
</head>
<body>
    <!-- Login Screen -->
    <div id="loginScreen" class="login-container">
        <div class="login-box">
            <h1>üîê Admin Login</h1>
            <div class="form-group">
                <label>Username</label>
                <input type="text" id="username" placeholder="admin">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="password" placeholder="Enter password">
            </div>
            <button class="btn btn-primary" style="width: 100%; margin-top: 16px;" onclick="login()">Login</button>
        </div>
    </div>

    <!-- Admin Interface -->
    <div id="adminInterface" class="hidden">
        <header class="admin-header">
            <h1>GFS Content Manager</h1>
            <nav class="admin-nav">
                <a href="/" target="_blank">View Site ‚Üí</a>
                <a href="#" onclick="logout()">Logout</a>
            </nav>
        </header>
        
        <div class="admin-container">
            <aside class="admin-sidebar">
                <div class="sidebar-section">
                    <h3>Pages</h3>
                    <a class="sidebar-link active" data-section="home">üè† Homepage</a>
                    <a class="sidebar-link" data-section="about">‚ÑπÔ∏è About</a>
                    <a class="sidebar-link" data-section="contact">üìû Contact</a>
                </div>
                <div class="sidebar-section">
                    <h3>Fence Pages</h3>
                    <a class="sidebar-link" data-section="vinyl">Vinyl</a>
                    <a class="sidebar-link" data-section="cedar">Cedar</a>
                    <a class="sidebar-link" data-section="wood">Wood</a>
                    <a class="sidebar-link" data-section="aluminum">Aluminum</a>
                    <a class="sidebar-link" data-section="chainlink">Chain Link</a>
                    <a class="sidebar-link" data-section="splitrail">Split Rail</a>
                </div>
                <div class="sidebar-section">
                    <h3>Settings</h3>
                    <a class="sidebar-link" data-section="site">üè¢ Company Info</a>
                </div>
            </aside>
            
            <main class="admin-main">
                <!-- Homepage Section -->
                <section id="section-home">
                    <h2>Homepage Content</h2>
                    
                    <div class="card">
                        <h3>Hero Section</h3>
                        <div class="form-group">
                            <label>Badge Text</label>
                            <input type="text" data-content="home.hero.badge">
                        </div>
                        <div class="form-group">
                            <label>Headline</label>
                            <input type="text" data-content="home.hero.headline">
                        </div>
                        <div class="form-group">
                            <label>Subheadline</label>
                            <input type="text" data-content="home.hero.subheadline">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea data-content="home.hero.description"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Background Image URL</label>
                            <div class="image-field">
                                <img id="hero-image-preview" src="">
                                <input type="text" data-content="home.hero.backgroundImage" onchange="updateImagePreview(this, 'hero-image-preview')">
                            </div>
                        </div>
                    </div>
                    
                    <div class="card">
                        <h3>Stats</h3>
                        <div id="stats-list"></div>
                    </div>
                    
                    <div class="card">
                        <h3>Fence Types</h3>
                        <div class="form-group">
                            <label>Section Headline</label>
                            <input type="text" data-content="home.fenceTypes.headline">
                        </div>
                        <div class="form-group">
                            <label>Section Subheadline</label>
                            <input type="text" data-content="home.fenceTypes.subheadline">
                        </div>
                        <div id="fence-types-list"></div>
                    </div>
                    
                    <div class="card">
                        <h3>Testimonials</h3>
                        <div id="testimonials-list"></div>
                    </div>
                </section>
                
                <!-- Site Settings Section -->
                <section id="section-site" class="hidden">
                    <h2>Company Information</h2>
                    
                    <div class="card">
                        <h3>Basic Info</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Company Name</label>
                                <input type="text" data-content="site.company.name">
                            </div>
                            <div class="form-group">
                                <label>Short Name (Logo)</label>
                                <input type="text" data-content="site.company.shortName">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" data-content="site.company.phone">
                            </div>
                            <div class="form-group">
                                <label>Phone (Raw)</label>
                                <input type="text" data-content="site.company.phoneRaw">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" data-content="site.company.email">
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" data-content="site.company.address">
                        </div>
                    </div>
                    
                    <div class="card">
                        <h3>Trust Bar</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Rating</label>
                                <input type="text" data-content="site.trustBar.rating">
                            </div>
                            <div class="form-group">
                                <label>Review Count</label>
                                <input type="text" data-content="site.trustBar.reviewCount">
                            </div>
                        </div>
                    </div>
                </section>
                
                <!-- Vinyl Fence Section -->
                <section id="section-vinyl" class="hidden">
                    <h2>Vinyl Fence Page</h2>
                    <p style="color: #64748b; margin-bottom: 24px;">Edit content for the vinyl fence page.</p>
                    <!-- Similar structure to homepage -->
                </section>
            </main>
        </div>
        
        <div class="save-bar">
            <span class="save-status" id="saveStatus">All changes saved</span>
            <div>
                <button class="btn btn-secondary" onclick="discardChanges()" style="margin-right: 12px;">Discard</button>
                <button class="btn btn-primary" onclick="saveChanges()">üíæ Save & Publish</button>
            </div>
        </div>
    </div>
    
    <div class="toast" id="toast"></div>

    <script define:vars={{ siteData: site, homeData: home }}>
        // Store content data
        let content = {
            site: JSON.parse(JSON.stringify(siteData)),
            home: JSON.parse(JSON.stringify(homeData))
        };
        let originalContent = JSON.parse(JSON.stringify(content));
        let hasChanges = false;
        
        // Login
        function login() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (username === 'admin' && password === 'gfs2024!') {
                document.getElementById('loginScreen').classList.add('hidden');
                document.getElementById('adminInterface').classList.remove('hidden');
                localStorage.setItem('gfs_admin_logged_in', 'true');
                initAdmin();
            } else {
                showToast('Invalid credentials', true);
            }
        }
        
        function logout() {
            localStorage.removeItem('gfs_admin_logged_in');
            document.getElementById('adminInterface').classList.add('hidden');
            document.getElementById('loginScreen').classList.remove('hidden');
        }
        
        // Check login on load
        if (localStorage.getItem('gfs_admin_logged_in') === 'true') {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('adminInterface').classList.remove('hidden');
            setTimeout(initAdmin, 100);
        }
        
        function initAdmin() {
            // Bind data to inputs
            document.querySelectorAll('[data-content]').forEach(input => {
                const path = input.getAttribute('data-content');
                const value = getNestedValue(content, path);
                input.value = value || '';
                
                // Update image preview if it's an image field
                const preview = input.closest('.image-field')?.querySelector('img');
                if (preview && value) preview.src = value;
                
                // Listen for changes
                input.addEventListener('input', () => {
                    setNestedValue(content, path, input.value);
                    markChanged();
                });
            });
            
            // Render lists
            renderStatsList();
            renderFenceTypesList();
            renderTestimonialsList();
            
            // Sidebar navigation
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const section = link.getAttribute('data-section');
                    showSection(section);
                    
                    document.querySelectorAll('.sidebar-link').forEach(l => l.classList.remove('active'));
                    link.classList.add('active');
                });
            });
        }
        
        function showSection(sectionId) {
            document.querySelectorAll('.admin-main > section').forEach(s => s.classList.add('hidden'));
            const section = document.getElementById('section-' + sectionId);
            if (section) section.classList.remove('hidden');
        }
        
        function getNestedValue(obj, path) {
            return path.split('.').reduce((o, k) => o?.[k], obj);
        }
        
        function setNestedValue(obj, path, value) {
            const keys = path.split('.');
            const last = keys.pop();
            const target = keys.reduce((o, k) => o[k] = o[k] || {}, obj);
            target[last] = value;
        }
        
        function markChanged() {
            hasChanges = true;
            document.getElementById('saveStatus').textContent = '‚óè Unsaved changes';
            document.getElementById('saveStatus').className = 'save-status unsaved';
        }
        
        function renderStatsList() {
            const container = document.getElementById('stats-list');
            if (!container) return;
            container.innerHTML = content.home.stats.map((stat, i) => `
                <div class="list-item">
                    <div class="list-item-content">
                        <div class="form-row">
                            <div class="form-group" style="margin: 0;">
                                <input type="text" value="${stat.number}" onchange="updateStat(${i}, 'number', this.value)" placeholder="Number">
                            </div>
                            <div class="form-group" style="margin: 0;">
                                <input type="text" value="${stat.label}" onchange="updateStat(${i}, 'label', this.value)" placeholder="Label">
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }
        
        function updateStat(index, field, value) {
            content.home.stats[index][field] = value;
            markChanged();
        }
        
        function renderFenceTypesList() {
            const container = document.getElementById('fence-types-list');
            if (!container) return;
            container.innerHTML = content.home.fenceTypes.items.map((fence, i) => `
                <div class="list-item" style="flex-direction: column; align-items: stretch;">
                    <div style="display: flex; gap: 16px; align-items: flex-start;">
                        <img src="${fence.image}" alt="${fence.name}" style="width: 120px; height: 90px; object-fit: cover; border-radius: 4px;">
                        <div style="flex: 1;">
                            <div class="form-group" style="margin-bottom: 8px;">
                                <input type="text" value="${fence.name}" onchange="updateFenceType(${i}, 'name', this.value)" placeholder="Name">
                            </div>
                            <div class="form-group" style="margin-bottom: 8px;">
                                <textarea onchange="updateFenceType(${i}, 'description', this.value)" placeholder="Description" style="min-height: 60px;">${fence.description}</textarea>
                            </div>
                            <div class="form-row">
                                <div class="form-group" style="margin: 0;">
                                    <input type="text" value="${fence.image}" onchange="updateFenceType(${i}, 'image', this.value); this.closest('.list-item').querySelector('img').src = this.value;" placeholder="Image URL">
                                </div>
                                <div class="form-group" style="margin: 0;">
                                    <input type="text" value="${fence.price}" onchange="updateFenceType(${i}, 'price', this.value)" placeholder="Price">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }
        
        function updateFenceType(index, field, value) {
            content.home.fenceTypes.items[index][field] = value;
            markChanged();
        }
        
        function renderTestimonialsList() {
            const container = document.getElementById('testimonials-list');
            if (!container) return;
            container.innerHTML = content.home.testimonials.items.map((t, i) => `
                <div class="list-item" style="flex-direction: column; align-items: stretch;">
                    <div class="form-group" style="margin-bottom: 8px;">
                        <textarea onchange="updateTestimonial(${i}, 'quote', this.value)" placeholder="Quote">${t.quote}</textarea>
                    </div>
                    <div class="form-row">
                        <div class="form-group" style="margin: 0;">
                            <input type="text" value="${t.author}" onchange="updateTestimonial(${i}, 'author', this.value)" placeholder="Author Name">
                        </div>
                        <div class="form-group" style="margin: 0;">
                            <input type="text" value="${t.location}" onchange="updateTestimonial(${i}, 'location', this.value)" placeholder="Location">
                        </div>
                    </div>
                </div>
            `).join('');
        }
        
        function updateTestimonial(index, field, value) {
            content.home.testimonials.items[index][field] = value;
            markChanged();
        }
        
        function updateImagePreview(input, previewId) {
            document.getElementById(previewId).src = input.value;
        }
        
        async function saveChanges() {
            showToast('Saving...');
            
            try {
                // Call Netlify function to save
                const response = await fetch('/.netlify/functions/save-content', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(content)
                });
                
                if (response.ok) {
                    hasChanges = false;
                    document.getElementById('saveStatus').textContent = '‚úì Saved & rebuilding...';
                    document.getElementById('saveStatus').className = 'save-status saved';
                    showToast('‚úÖ Changes saved! Site rebuilding...');
                } else {
                    throw new Error('Save failed');
                }
            } catch (err) {
                // Fallback: download as JSON
                console.error('Save error:', err);
                downloadContent();
                showToast('Downloaded JSON files. Upload to GitHub to update site.', true);
            }
        }
        
        function downloadContent() {
            // Download site.json
            const siteBlob = new Blob([JSON.stringify(content.site, null, 2)], {type: 'application/json'});
            const siteUrl = URL.createObjectURL(siteBlob);
            const siteLink = document.createElement('a');
            siteLink.href = siteUrl;
            siteLink.download = 'site.json';
            siteLink.click();
            
            // Download home.json
            const homeBlob = new Blob([JSON.stringify(content.home, null, 2)], {type: 'application/json'});
            const homeUrl = URL.createObjectURL(homeBlob);
            const homeLink = document.createElement('a');
            homeLink.href = homeUrl;
            homeLink.download = 'home.json';
            homeLink.click();
        }
        
        function discardChanges() {
            if (confirm('Discard all changes?')) {
                content = JSON.parse(JSON.stringify(originalContent));
                hasChanges = false;
                document.getElementById('saveStatus').textContent = 'All changes saved';
                document.getElementById('saveStatus').className = 'save-status';
                initAdmin();
                showToast('Changes discarded');
            }
        }
        
        function showToast(message, isError = false) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast show' + (isError ? ' error' : '');
            setTimeout(() => toast.className = 'toast', 3000);
        }
        
        // Handle keyboard shortcut
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                saveChanges();
            }
        });
    </script>
</body>
</html>
